{
  "name": "OlyaHryhorenko/oop_serialize",
  "description": "This is a object serializer written in OOP way.",
  "keywords": ["project"],
  "type": "project",
  "license": "BSD-3-Clause",
  "authors": [
    {
      "name": "Olya Hryhorenko",
      "email": "olhahryhorencko@gmail.com",
      "role": "Maintainer"
    }
  ],
  "minimum-stability": "stable",
  "require": {
    "php": ">=7.3",
    "pear/xml_serializer": "^0.22.0",
    "symfony/yaml": "^4.3"
  },
  "require-dev": {
    "phpunit/phpunit": "^8.0",
    "friendsofphp/php-cs-fixer": "^2.14"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "App\\Test\\": "tests/"
    }
  },
  "scripts": {
    "cs-check": "php-cs-fixer fix --allow-risky=yes --diff --ansi --dry-run",
    "cs-fix": "php-cs-fixer fix --allow-risky=yes --diff --ansi",
    "tests": "phpunit --colors=always"
  },
  "config": {
    "sort-packages": true
  }
}
